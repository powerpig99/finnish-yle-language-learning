{
  "manifest_version": 3,
  "name": "Finnish Language Learning for YLE Areena",
  "version": "3.1.0",
  "description": "Learn Finnish with dual subtitles, popup dictionary with AI translation, auto-pause, and playback speed control on YLE Areena. Supports Google Translate, DeepL, Claude, Gemini, and Grok.",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://areena.yle.fi/*"],
      "run_at": "document_end",
      "js": ["database.js", "utils.js", "contentscript.js", "inject.js"],
      "css": ["styles.css"]
    }
  ],
  "host_permissions": [
    "https://api-free.deepl.com/*",
    "https://api.deepl.com/*",
    "https://translate.googleapis.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.x.ai/*"
  ],
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://areena.yle.fi/*"]
    }
  ],
  "action": {
    "default_title": "Finnish Language Learning for YLE",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "options_page": "extension-options-page/dist/index.html"
}
